<!DOCTYPE html>
<html>
  <head>
    <title><%= t(:"Cats") %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
  <header>
      <div class="collapse bg-dark" id="navbarHeader">
        <div class="container">
          <div class="row">
            <div class="col-sm-8 col-md-7 py-4">
              <h4 class="text-white"><%= t(:"Features") %></h4>
              <p class="text-muted"><%= link_to t(:'Share your cat!'), new_cat_path %></p>
            </div>
            <div class="col-sm-4 offset-md-1 py-4">
              <h4 class="text-white"><%= t(:"Contacts") %></h4>
              <ul class="list-unstyled">
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class="navbar navbar-dark bg-dark box-shadow">
        <div class="container d-flex justify-content-between">
          <a href="#" class="navbar-brand d-flex align-items-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2"><path d="M23 19a2 2 0 0 1-2 2H3a2 2 sss0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"></path><circle cx="12" cy="13" r="4"></circle></svg>
            <strong><h1><%= link_to  t(:'Cats'), cats_path %></h1></strong>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarHeader" aria-controls="navbarHeader" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
        </div>
      </div>
    </header>
    <% if current_user %>
      <%= t(:"Signed in as") %> <%= current_user.name %> | <%= link_to t(:"Logout"), '/logout' %>
      <% else %>
    <%= link_to t(:'Login'), '/login' %> | <%= link_to 'Signup', '/signup' %>
    <% end %>
    <li><%= link_to 'Русский', {locale: :ru} %></li>
    <li><%= link_to 'English', {locale: :en} %></li>

    <%= yield %>

  </body>
</html>
