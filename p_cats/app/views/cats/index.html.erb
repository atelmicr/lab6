<p id="notice"><%= notice %></p>

    <main role="main">

      <section class="jumbotron text-center">
        <div class="container">
          <h1 class="jumbotron-heading"><%= t(:"Welcome to the land of cats") %></h1>
          <p class="lead text-muted"><%= t(:"You can upload images of your beloved pets!") %></p>
          <p>
            <a href="#" class="btn btn-common"><%= link_to 'OK', new_cat_path %></a>
          </p>
        </div>
      </section>

      <div class="album py-5 bg-light">
        <div class="container">


<% @cats.each do |cat| %>
          <div class="jumbotron text-center">
              <div class="card mb-4 box-shadow" >
                <div class="card-body", align="center">
                  <%= image_tag cat.image.thumb.url %>
                  <p class="card-text"><%= cat.name %></p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <%= link_to 'Show', cat %>|
                      <%= link_to 'Edit', edit_cat_path(cat) %>
                  </div>
                </div>
              </div>
            </div>
          </div>
<% end %>
        </div>
      </div>

    </main>









