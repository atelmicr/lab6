<%= form_tag  url_for(controller: :proxy, action: :output), method: 'get' do %>

    <div class="form-group">
      <h3>Числа Мерсенна</h3>
    </div>

    <div class="form-group">
      <%= label_tag("Введите число:") %>
      <%= text_field_tag :n, value = nil, class: 'form-control' %>
    </div>

    <fieldset class="form-group">
      <legend>Выбор стороны:</legend>
      <div class="form-check">
        <label class="form-check-label">
          <input type="radio" class="form-check-input" name="side" value="server" id="server-side" checked>
          Сервер приложения
        </label>
      </div>
      <div class="form-check">
        <label class="form-check-label">
          <input type="radio" class="form-check-input" name="side" value="client" id="client-side">
          XML на стороне браузера
        </label>
     </div>
      <div class="form-check">
        <label class="form-check-label">
          <input type="radio" class="form-check-input" name="side" value="client-with-xslt" id="client-side-xslt">
          Браузер с помощью XSLT
        </label>
      </div>
    </fieldset>
    <%= submit_tag 'ОК', class: 'btn btn-success' %>
<% end %>
